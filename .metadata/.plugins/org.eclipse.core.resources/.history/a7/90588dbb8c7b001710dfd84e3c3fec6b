package org.Macro.common;

import java.util.Map;

import javax.enterprise.context.ApplicationScoped;

import bwapi.UnitType;

@ApplicationScoped
public class AmountOfBuildings {

	private Map<UnitType, Integer> amountOfBuildingsToBe;

	public Map<UnitType, Integer> getAmountOfBuildings() {
		return amountOfBuildings;
	}

	public Integer getAmountOfBuilding(UnitType unitType) {
		return this.amountOfBuildings.get(unitType);
	}

	public void setAmountOfBuilding(UnitType unitType, Integer amount) {
		this.amountOfBuildings.put(unitType, amount);
	}

}
