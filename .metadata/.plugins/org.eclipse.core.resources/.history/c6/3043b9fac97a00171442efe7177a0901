package org.TRX.bwapi.Facade.Utils;

import bwapi.Unit;
import bwapi.UnitType;

/**
 * Not an 'Build order' in a convetional sense but more a singel Order that was
 * given to an worker.
 * 
 * ask in irc if worker.ondie can be added as listener or something
 * 
 * @author Turox
 *
 */
public class BuildOrder {

	// get framecount game.getFrameCount();

	private int timeOfOrder;
	private UnitType orderType;
	private Unit worker;

	public BuildOrder(int timeOfOrder, UnitType orderType, Unit worker) {
		this.timeOfOrder = timeOfOrder;
		this.orderType = orderType;
		this.setWorker(worker);

	}

	public int getTimeOfOrder() {
		return timeOfOrder;
	}

	public void setTimeOfOrder(int timeOfOrder) {
		this.timeOfOrder = timeOfOrder;
	}

	public UnitType getOrderType() {
		return orderType;
	}

	public void setOrderType(UnitType orderType) {
		this.orderType = orderType;
	}

	public Unit getWorker() {
		return worker;
	}

	public void setWorker(Unit worker) {
		this.worker = worker;
	}

}
